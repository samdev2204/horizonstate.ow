<script type="text/javascript">

    function updateArticleSliderSize(){
        
        var slideCount = $('.articleSlider li').length;
        $('.articleSliderInner').css('width', $('.articleSlider li:first-child').width() * slideCount + 'px');
        
        // make heights consistent
        
            // find tallest item
            var maxHeight = -1;
            $('.articleSliderItem').each(function(){
                $(this).css('height', 'auto');
                maxHeight = maxHeight > $(this).height() ? maxHeight : $(this).height();
            });
            
            // set all items to max height
            $('.articleSliderItem').each(function(){
                $(this).css('height', maxHeight + 'px');
            });
        
    }
    
    function goToArticleSlide(index){
        
        var slideCount = $('.articleSlider li').length;
        
        // activate requested slide
        $('.articleSlider').attr('data-active-slide', index);
        $('.articleSlider').css('margin-left', '-' + ((index-1) * $('.articleSlider li:first-child').width()) + 'px');
        
    }
    
    $(window).on('resize', function(){
        updateArticleSliderSize();
    });
    
    $(document).ready(function(){
        
        updateArticleSliderSize();
        goToArticleSlide(1);
        
        // next slide
        $('.articleSliderNext').click(function(){
            var activeSlide = parseInt($('.articleSlider').attr('data-active-slide'));
            var slideCount = $('.articleSlider li').length;
            if ( activeSlide == slideCount ) {
                goToArticleSlide(1);
            } else {
                goToArticleSlide(activeSlide + 1);
            }
        });
        
        // prev slide
        $('.articleSliderPrev').click(function(){
            var activeSlide = parseInt($('.articleSlider').attr('data-active-slide'));
            var slideCount = $('.articleSlider li').length;
            if ( activeSlide == 1 ) {
                goToArticleSlide(slideCount);
            } else {
                goToArticleSlide(activeSlide - 1);
            }
        });
        
        // hover effect
        $('.articleSlider li').mouseenter(function(){
            $(this).find('.more').addClass('hover');
        });
        $('.articleSlider li').mouseleave(function(){
            $(this).find('.more').removeClass('hover');
        });
        
    });
    
</script>
    
